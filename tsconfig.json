{
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "bundler",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "strict": false,
    "rootDir": ".",
    "skipLibCheck": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./src/entry.ts",
    "./src/standalone-entry.tsx",
    "./src/standalone-mocks/**",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx",
    "./*.js",
    "./*.d.ts",
    "./.yalc/**"
  ]
}
